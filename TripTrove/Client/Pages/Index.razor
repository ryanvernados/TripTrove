@code {
    string GetId(int i) => "header-" + i;
    string GetHref(int i) => "#" + GetId(i);

    protected override async Task OnAfterRenderAsync(bool render)
    {
        if (render)
        {
            await js.InvokeVoidAsync("initialiseScrollAnimations");
            await js.InvokeVoidAsync("initialiseStickyNavBar");
            await js.InvokeVoidAsync("initialiseToggleIconNavBar");
            await js.InvokeVoidAsync("initialiseScrollReveal");
